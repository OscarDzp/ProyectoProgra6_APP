<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoProgra6_APP.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="loginbackground"
            >
    <VerticalStackLayout>
        <Image Source="automagnate" Aspect="AspectFill" WidthRequest="200" HeightRequest="200" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,50,0,50"/>

        <Label  Text="Bienvenidos a Autos Magnate" TextColor="White" FontSize="25" FontAttributes="Bold" Margin="0,0,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>
        <Entry x:Name="TxtEmail" Placeholder="Email..." FontSize="20" Keyboard="Email"
               Margin="0,20,0,0"/>
        <Entry x:Name="TxtPassword" Placeholder="Password..." FontSize="20" Keyboard="Text" IsPassword="True" Margin="0,20,0,0" />
        <Button x:Name="BtnIngresar" Text="Ingresar" BackgroundColor="Green" TextColor="White" Margin="0,30,0,0" WidthRequest="200" HeightRequest="60" />

        <Label  Text=" Â© Todos los derechos reservados de Hacking Solutions" TextColor="White" FontSize="15" Margin="0,200,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>
    </VerticalStackLayout>
</ContentPage>