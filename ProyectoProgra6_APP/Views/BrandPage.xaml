<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoProgra6_APP.Views.BrandPage"
             Title="Admin Marcas">
    <VerticalStackLayout>

        <Label  Text="Admin Marcas" TextColor="White" FontSize="25" FontAttributes="Bold" Margin="0,0,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>

        <Entry x:Name="TxtNombre" Placeholder="Nombre" FontSize="20" Margin="0,20,0,0"  TextColor="Black"/>

        <Entry x:Name="TxtPais" Placeholder="Pais" FontSize="20" Margin="0,20,0,0"  TextColor="Black"/>

        <Button x:Name="BtnAgregar" Text="Login" BackgroundColor="Green" TextColor="White" WidthRequest="200" HeightRequest="60"  />


    </VerticalStackLayout>
</ContentPage>